{
  "version": 3,
  "configurePresets": [
    {
      "name": "Base",
      "hidden": true,
      "generator": "Ninja Multi-Config",
      "binaryDir": "${sourceDir}/Build/${presetName}",
      "toolchainFile": "${sourceDir}/vcpkg/scripts/buildsystems/vcpkg.cmake",
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/vcpkg/scripts/buildsystems/vcpkg.cmake",
        "CMAKE_INSTALL_PREFIX": "${sourceDir}/Build/install/${presetName}"
      }
    },
    {
      "name": "Clang",
      "inherits": "Base",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "clang$env{clang_compiler_version}",
        "CMAKE_CXX_COMPILER": "clang++$env{clang_compiler_version}"
      }
    },
    {
      "name": "GCC",
      "condition": {
        "type": "notEquals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      },
      "inherits": "Base",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "gcc$env{gcc_compiler_version}",
        "CMAKE_CXX_COMPILER": "g++$env{gcc_compiler_version}"
      }
    },
    {
      "name": "MSVC",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      },
      "inherits": "Base",
      "generator": "Visual Studio 16 2019"
    }
  ],
  "buildPresets": [
    {
      "name": "Base",
      "hidden": true,
      "verbose": true
    },
    {
      "name": "Debug",
      "hidden": true,
      "inherits": "Base",
      "configuration": "Debug"
    },
    {
      "name": "Release",
      "hidden": true,
      "inherits": "Base",
      "configuration": "Release"
    },
    {
      "name": "Clang Debug",
      "inherits": "Debug",
      "configurePreset": "Clang"
    },
    {
      "name": "Clang Release",
      "inherits": "Release",
      "configurePreset": "Clang"
    },
    {
      "name": "GCC Debug",
      "inherits": "Debug",
      "configurePreset": "GCC"
    },
    {
      "name": "GCC Release",
      "inherits": "Release",
      "configurePreset": "GCC"
    },
    {
      "name": "MSVC Debug",
      "inherits": "Debug",
      "configurePreset": "MSVC"
    },
    {
      "name": "MSVC Release",
      "inherits": "Release",
      "configurePreset": "MSVC"
    }
  ],
  "testPresets": [
    {
      "name": "Base",
      "hidden": true,
      "output": {
        "verbosity": "verbose"
      }
    },
    {
      "name": "Debug",
      "hidden": true,
      "inherits": "Base",
      "configuration": "Debug"
    },
    {
      "name": "Release",
      "hidden": true,
      "inherits": "Base",
      "configuration": "Release"
    },
    {
      "name": "Clang Debug",
      "inherits": "Debug",
      "configurePreset": "Clang"
    },
    {
      "name": "Clang Release",
      "inherits": "Release",
      "configurePreset": "Clang"
    },
    {
      "name": "GCC Debug",
      "inherits": "Debug",
      "configurePreset": "GCC"
    },
    {
      "name": "GCC Release",
      "inherits": "Release",
      "configurePreset": "GCC"
    },
    {
      "name": "MSVC Debug",
      "inherits": "Debug",
      "configurePreset": "MSVC"
    },
    {
      "name": "MSVC Release",
      "inherits": "Release",
      "configurePreset": "MSVC"
    }
  ]
}